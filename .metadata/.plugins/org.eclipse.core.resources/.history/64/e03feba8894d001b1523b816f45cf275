package leetcode.array.problems;

import java.util.Arrays;
import java.util.Scanner;
import java.util.stream.IntStream;

/**
 * @author Hardik
 *
 *         Date : Jan 2, 2021 Time : 8:20:18 PM
 */
public class CellsWithOddValuesInMatrix {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int m = sc.nextInt();
		int row = sc.nextInt();
		int col = sc.nextInt();
		int[][] indices = new int[row][col];
		for (int i = 0; i < row; i++) {
			for (int j = 0; j < col; j++) {
				indices[i][j] = sc.nextInt();
			}
		}
		int ans = oddCells(indices, n, m);
		System.out.println(ans);
		sc.close();

	}

	/**
	 * @param arr
	 * @param m
	 * @param num
	 * @return
	 */
	private static int oddCells(int[][] indices, int n, int m) {
		int[][] arr = new int[n][m];
		IntStream oddCount = 0;
		for (int i = 0; i < indices.length; i++) {
			int row = indices[i][0];
			int col = indices[i][1];
			oddCount = Arrays.stream(arr[row]).map(k -> k+1).filter(k -> k%2!=0);
		}

		return oddCount;
	}

}
