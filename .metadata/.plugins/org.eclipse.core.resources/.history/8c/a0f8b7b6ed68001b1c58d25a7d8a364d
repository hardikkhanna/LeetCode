	}

	/**
	 * 
	 */
	private static void checkIfArrayisSortedAndRotated() {
		int[] nums = get1DArray();
		int min = Integer.MAX_VALUE;
		int max = Integer.MIN_VALUE;
		int startIndex = 0;
		for (int i = 0; i < nums.length; i++) {
			if (min > nums[i]) {
				min = nums[i];
				startIndex = i;
			}
		}
		Boolean check1 = true;
		for (int i = 1; i < startIndex; i++) {
			if (arr[i] < arr[i - 1]) {
				flag1 = false;
				break;
			}
		}

	}

}
